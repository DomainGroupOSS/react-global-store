{
  "parser": "babel-eslint",
  "plugins": [
    "prettier",
    "eslint-plugin-import",
    "eslint-plugin-jsx-a11y",
    "eslint-plugin-react"
  ],
  "extends": ["airbnb", "prettier", "prettier/react"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "all",
        "arrowParens": "always"
      }
    ],
    "no-negated-condition": "error",
    "react/jsx-filename-extension": [
      "warn",
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "react/no-direct-mutation-state": "error",
    "id-length": [
      "error",
      {
        "min": 3,
        "properties": "never",
        "exceptions": ["_"]
      }
    ],
    "padded-blocks": "off",
    "no-underscore-dangle": [
      "error",
      {
        "allowAfterThis": true
      }
    ],
    "no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "after-used",
        "argsIgnorePattern": "^_",
        "ignoreRestSiblings": true
      }
    ],
    "curly": [
      "error",
      "all"
    ]
  }
}
