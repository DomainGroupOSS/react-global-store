{
  "name": "react-global-store",
  "version": "1.0.0",
  "description": "A simple global state solution for React",
  "keywords": [
    "react",
    "store"
  ],
  "main": "dist/main.js",
  "scripts": {
    "build": "webpack --mode production",
    "lint": "eslint ./src ./test",
    "test": "yarn build && yarn lint && yarn test:unit",
    "test:unit": "nyc mocha",
    "watch": "yarn storybook",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0",
    "version": "version-changelog CHANGELOG.md && changelog-verify CHANGELOG.md && git add CHANGELOG.md"
  },
  "pre-commit": [
    "lint"
  ],
  "author": "Brett Snaidero",
  "license": "MIT",
  "dependencies": {
    "create-react-context": "^0.2.2",
    "lodash": "^4.17.10",
    "path": "^0.12.7",
    "prop-types": "^15.5.10",
    "warning": "^3.0.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.4.10",
    "@storybook/addon-links": "^3.4.10",
    "@storybook/addons": "^3.4.10",
    "@storybook/react": "^3.4.10",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^7.1.5",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-stateless-component-name": "^1.1.2",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-enzyme": "^1.0.0-beta.1",
    "changelog-verify": "^1.1.0",
    "depd": "^1.1.0",
    "dirty-chai": "^2.0.1",
    "enzyme": "^3.5.0",
    "enzyme-adapter-react-16": "^1.3.0",
    "eslint": "^5.4.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.11.1",
    "flow-result-checker": "^1.0.0",
    "in-publish": "^2.0.0",
    "jsdom": "^12.0.0",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "pre-commit": "^1.2.2",
    "prettier": "^1.14.2",
    "proxyquire": "^2.0.1",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "sinon": "^6.1.5",
    "sinon-chai": "^3.2.0",
    "version-changelog": "^3.1.0",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5"
  },
  "peerDependencies": {
    "react": "^15.6.4 || ^16.4.2",
    "react-dom": "^15.6.4 || ^16.4.2"
  },
  "babel": {
    "presets": [
      "env",
      "react"
    ],
    "plugins": [
      "transform-object-rest-spread",
      "transform-class-properties",
      "transform-react-stateless-component-name"
    ]
  }
}
